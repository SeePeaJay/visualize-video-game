{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "airbnb-base",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
      "no-unused-vars": 0,
      "no-param-reassign": ["error", { "props": false }],
      "indent": ["error", 2, { "MemberExpression": "off" }], // support d3 indent convention
      "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
    },
    "globals": {
      "d3": false,
      "noUiSlider": false,
      "BubbleChart": false,
      "ScatterPlot": false,
      "PieChart": false
    }
}
